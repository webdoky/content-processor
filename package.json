{
  "name": "@webdoky/content-processor",
  "version": "1.12.0",
  "description": "Content processor for WebDoky project",
  "type": "module",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "~16",
    "@typescript-eslint/eslint-plugin": "~5.26",
    "@typescript-eslint/parser": "~5.26",
    "ava": "^5.0.1",
    "eslint": "~8.16",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "prettier": "~2.6",
    "semantic-release": "^19.0.5",
    "tsutils": "~3.21"
  },
  "scripts": {
    "start": "node --experimental-specifier-resolution=node build/src/_starter.js",
    "clean": "rimraf coverage build tmp",
    "build": "rimraf dist && tsc -p tsconfig.json && rollup -c rollup.config.js",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "yarn run clean && tsc -p tsconfig.release.json",
    "postinstall": "yarn build",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "ava --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "ava --watch --verbose",
    "prepare": "husky install"
  },
  "author": "WebDoky team <webdoky.org@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@webdoky/yari-ports": "^3.1.1",
    "acorn-import-assertions": "^1.8.0",
    "cyrillic-to-translit-js": "^3.2.1",
    "github-slugger": "^1.4.0",
    "gray-matter": "^4.0.3",
    "is-absolute-url": "^4.0.1",
    "lodash-es": "^4.17.21",
    "mdast-util-to-hast": "^12.1.1",
    "mdast-util-to-string": "^3.1.0",
    "prism-themes": "^1.9.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^1.0.1",
    "rehype-parse": "^8.0.4",
    "rehype-prism": "^2.1.2",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-import-assert": "^2.1.0",
    "ts-node": "^10.8.1",
    "tslib": "~2.4",
    "typescript": "~4.7",
    "unified": "^10.1.1",
    "unist-builder": "^3.0.0",
    "unist-util-visit": "^4.1.0",
    "unist-util-visit-parents": "^5.1.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "require": [
      "ts-node/register"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "files": [
      "!external/"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        2,
        "always",
        220
      ],
      "body-max-line-length": [
        2,
        "always",
        220
      ]
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
